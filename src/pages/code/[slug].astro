---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import NavBar from '../../components/NavBar.tsx';

export async function getStaticPaths() {
    const codeProjects = await getCollection('code');
    return codeProjects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

type Props = {
    project: CollectionEntry<'code'>;
};

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout>
    <NavBar client:load />

    <main class="max-w-4xl mx-auto px-4 py-8">
        <!-- Header -->
        <header class="mb-8">
            <div class="flex items-center gap-4 mb-6">
                <a
                        href="/code"
                        class="text-blue-400 hover:text-blue-300 flex items-center gap-2 transition-colors"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Back to Code
                </a>
            </div>

            <h1 class="text-4xl font-bold mb-4">{project.data.title}</h1>

            <div class="flex flex-wrap items-center gap-4 text-gray-400 mb-6">
                <span>{project.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                {project.data.category && <span>â€¢ {project.data.category}</span>}
                <span class={`px-2 py-1 rounded-full text-xs ${
                    project.data.status === 'completed'
                        ? 'bg-green-900/30 text-green-300'
                        : project.data.status === 'in-progress'
                            ? 'bg-yellow-900/30 text-yellow-300'
                            : 'bg-gray-800 text-gray-400'
                }`}>
          {project.data.status}
        </span>
            </div>

            {project.data.tech && (
                    <div class="flex flex-wrap gap-2 mb-6">
                        {project.data.tech.map((tech: string) => (
                                <span key={tech} class="bg-gray-800 text-gray-300 px-3 py-1 rounded-lg text-sm">
              {tech}
            </span>
                        ))}
                    </div>
            )}

            <!-- Project Links -->
            <div class="flex flex-wrap gap-3 mb-8">
                {project.data.liveUrl && (
                        <a
                                href={project.data.liveUrl}
                                target="_blank"
                                class="px-6 py-2 bg-green-600 hover:bg-green-700 rounded-lg transition-colors flex items-center gap-2"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                            </svg>
                            View Live
                        </a>
                )}
                {project.data.githubUrl && (
                        <a
                                href={project.data.githubUrl}
                                target="_blank"
                                class="px-6 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg transition-colors flex items-center gap-2"
                        >
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                            </svg>
                            View Code
                        </a>
                )}
            </div>

            <!-- Screenshots -->
            {project.data.screenshots && project.data.screenshots.length > 0 && (
                    <div class="mb-8">
                        <h3 class="text-xl font-semibold mb-4">Screenshots</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {project.data.screenshots.map((screenshot: string, index: number) => (
                                    <img
                                            key={index}
                                            src={screenshot}
                                            alt={`Screenshot ${index + 1} of ${project.data.title}`}
                                            class="rounded-lg border border-gray-700 hover:border-gray-600 transition-colors"
                                            loading="lazy"
                                    />
                            ))}
                        </div>
                    </div>
            )}
        </header>

        <!-- Content -->
        <article class="prose prose-invert prose-lg max-w-none">
            <Content />
        </article>

        <!-- Related Projects or Back Link -->
        <footer class="mt-12 pt-8 border-t border-gray-700">
            <a
                    href="/code"
                    class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 transition-colors"
            >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                View All Projects
            </a>
        </footer>
    </main>
</Layout>