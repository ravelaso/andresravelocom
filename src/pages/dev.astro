---
import Layout from "@/layouts/Layout.astro";
import NavBar from "@/components/NavBar.tsx";
import DevCard from "@/components/DevCard.astro";
import { getCollection } from "astro:content";

export const prerender = true;

const codeProjects = await getCollection("code");
const sortedProjects = codeProjects.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout>
  <NavBar client:load />

  <!-- Page Header -->
  <section class="max-w-5xl mx-auto px-4 mt-12 mb-20">
    <h1 class="text-4xl font-bold text-center text-neutral-100 mb-4">Development Work</h1>
    <p class="text-center text-neutral-400 text-lg max-w-2xl mx-auto">
      A collection of practical tools and sites Iâ€™ve built using modern web technologies.
    </p>
  </section>

  <!-- Skills Section -->
  <section class="max-w-5xl mx-auto px-4 mb-24 space-y-12">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-semibold text-neutral-100 mb-2">Frontend</h3>
        <ul class="flex flex-wrap gap-2">
          {["React", "Astro", "TypeScript", "Next.js", "Tailwind CSS"].map((tech) => (
            <li class="bg-neutral-900 text-neutral-300 px-3 py-1 text-sm border border-neutral-700 rounded-full">
              {tech}
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-neutral-100 mb-2">Backend</h3>
        <ul class="flex flex-wrap gap-2">
          {["Node.js", "Python", "PostgreSQL", "MongoDB", "Redis"].map((tech) => (
            <li class="bg-neutral-900 text-neutral-300 px-3 py-1 text-sm border border-neutral-700 rounded-full">
              {tech}
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-neutral-100 mb-2">Cloud & DevOps</h3>
        <ul class="flex flex-wrap gap-2">
          {["Cloudflare", "Vercel", "AWS", "Docker", "GitHub Actions"].map((tech) => (
            <li class="bg-neutral-900 text-neutral-300 px-3 py-1 text-sm border border-neutral-700 rounded-full">
              {tech}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>

  <!-- Projects List -->
  <section class="max-w-5xl mx-auto px-4 space-y-16 pb-32">
    {sortedProjects.map((project) => (
      <DevCard project={project} />
    ))}
  </section>
</Layout>
