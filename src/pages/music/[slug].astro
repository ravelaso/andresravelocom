---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import NavBar from '@/components/NavBar.tsx';

export async function getStaticPaths() {
    const musicProjects = await getCollection('music');
    return musicProjects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

type Props = {
    project: CollectionEntry<'music'>;
};

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout>
    <NavBar client:load />

    <main class="max-w-4xl mx-auto px-4 py-8">
        <!-- Header -->
        <header class="mb-8">
            <div class="flex items-center gap-4 mb-6">
                <a
                        href="/music"
                        class="text-blue-400 hover:text-blue-300 flex items-center gap-2 transition-colors"
                >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Back to Music
                </a>
            </div>

            <h1 class="text-4xl font-bold mb-4">{project.data.title}</h1>

            <div class="flex flex-wrap items-center gap-4 text-gray-400 mb-6">
                <span>{project.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                {project.data.genre && <span>• {project.data.genre}</span>}
                {project.data.duration && <span>• {project.data.duration}</span>}
            </div>

            {project.data.tags && (
                    <div class="flex flex-wrap gap-2 mb-6">
                        {project.data.tags.map((tag: string) => (
                                <span class="bg-blue-900/30 text-blue-300 px-3 py-1 rounded-full text-sm">
              {tag}
            </span>
                        ))}
                    </div>
            )}

            <!-- Listen Links -->
            <div class="flex flex-wrap gap-3">
                {project.data.spotifyUrl && (
                        <a
                                href={project.data.spotifyUrl}
                                target="_blank"
                                class="px-6 py-2 bg-green-600 hover:bg-green-700 rounded-lg transition-colors flex items-center gap-2"
                        >
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.48.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.42 1.56-.299.421-1.02.599-1.559.3z"/>
                            </svg>
                            Spotify
                        </a>
                )}
                {project.data.youtubeUrl && (
                        <a
                                href={project.data.youtubeUrl}
                                target="_blank"
                                class="px-6 py-2 bg-red-600 hover:bg-red-700 rounded-lg transition-colors flex items-center gap-2"
                        >
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                            </svg>
                            YouTube
                        </a>
                )}
                {project.data.soundcloudUrl && (
                        <a
                                href={project.data.soundcloudUrl}
                                target="_blank"
                                class="px-6 py-2 bg-orange-600 hover:bg-orange-700 rounded-lg transition-colors"
                        >
                            SoundCloud
                        </a>
                )}
            </div>
        </header>

        <!-- Content -->
        <article class="prose prose-invert prose-lg max-w-none">
            <Content />
        </article>
    </main>
</Layout>